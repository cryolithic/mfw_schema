{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "schema for the JSON settings",
    "type": "object",
    "required": ["version","system","network"],
    "properties": {
        "version": {
            "type": "integer",
            "minimum": 1
        },
        "network": { "$ref": "file:network/network_schema.json#/definitions/network_settings" },
        "system": { "$ref": "file:system/system_schema.json#/definitions/system_settings" },
        "reports": { "$ref": "file:reports/reports_schema.json#/definitions/reports_settings" },
        "firewall": { "$ref": "file:firewall/firewall_schema.json#/definitions/firewall_settings" },
        "dhcp": { "$ref": "file:dhcp/dhcp_schema.json#/definitions/dhcp_settings" },
        "dns": { "$ref": "file:dns/dns_schema.json#/definitions/dns_settings" },
        "accounts": { "$ref": "file:accounts/accounts_schema.json#/definitions/accounts_settings" }
    },
    "definitions": {
    }
}
