{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "files_settings": {
            "type": "array",
            "items": { "$ref": "#/definitions/file_settings" }
        },
        "file_settings": {
            "type": "object",
            "description": "A specific widget settings",
            "required": ["path","encoding","contents"],
            "properties": {
                "path": {
                    "description": "The path of the file",
                    "type": "string"
                },
                "encoding": {
                    "type": "string",
                    "description": "The encoding of the file",
                    "enum": ["base64"]
                },
                "contents": {
                    "description": "The (encoded) contents of the file",
                    "type": "string"
                },
                "operation": {
                    "description": "The sync-settings operation that needs to take place if this file changes",
                    "type": "string"
                }
            }
        }
    }
}
