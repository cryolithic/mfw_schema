{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "loggers": {
            "type":"object",
            "description": "All logging settings",
            "additionalProperties": false,
            "properties": {
                "alertd" :{
                    "$ref": "#/definitions/logger_setting" 
                },
                "cls" :{
                    "$ref": "#/definitions/logger_setting" 
                },
                "packetd":{
                    "$ref": "#/definitions/logger_setting" 
                },
                "reportd" :{
                    "$ref": "#/definitions/logger_setting" 
                },
                "restd": {
                    "$ref": "#/definitions/logger_setting" 
                }
            },
            "required": [
                "alertd",
                "cls",
                "packetd",
                "reportd",
                "restd"
            ]
        },
        "logger_setting" :{
            "type":"object",
            "additionalProperties": {
                "type":"object",
                "description": "The logger settings for a package or function",
                "additionalProperties": false,
                "properties": {
                    "logname" : {
                        "type": "string",
                        "description": "The logging level",
                        "enum": [
                            "EMERG", 
                            "ALERT", 
                            "CRIT", 
                            "ERROR", 
                            "WARN", 
                            "NOTICE", 
                            "INFO", 
                            "DEBUG", 
                            "TRACE"
                        ]
                    }
                },
                "required": ["logname"]
            }
        }
    }
}